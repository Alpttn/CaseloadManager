@model IEnumerable<CaseloadManager.Models.Client>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.FirstInitial)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.LastName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.StatusType)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FacilityId)
            </th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.FirstInitial)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LastName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.StatusType.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FacilityId)
            </td>
            <td>
                <a asp-action="Details" asp-route-id="@item.ClientId">Details</a> |
                <a asp-action="Edit" asp-route-id="@item.ClientId">Edit Status</a> |
                <a asp-action="Delete" asp-route-id="@item.ClientId">Discharge</a>
            </td>
        </tr>
}
    </tbody>
</table>
