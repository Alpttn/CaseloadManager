            <a asp-action="Discharge" asp-route-id="@item.ClientId">Discharge</a>
        </td>
    </tr>
    }
    else if (item.StatusTypeId == 3)
    {
    <tr class="HighlightStatusType3">
        <td>
            @Html.DisplayFor(modelItem => item.FullName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.StatusType.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Facility.Name)
        </td>
        <td>
            <a asp-action="Details" asp-route-id="@item.ClientId">Details</a> |
            <a asp-action="Edit" asp-route-id="@item.ClientId">Edit</a> |
            <a asp-action="Discharge" asp-route-id="@item.ClientId">Discharge</a>
        </td>
    </tr>
    }
    else if (item.StatusTypeId == 4)
    {
    <tr class="HighlightStatusType4">
