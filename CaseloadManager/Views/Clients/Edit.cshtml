@model CaseloadManager.Models.Client

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Client</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="ClientId" />
            <div class="form-group">
                <label asp-for="FirstInitial" class="control-label"></label>
                <input asp-for="FirstInitial" class="form-control" />
                <span asp-validation-for="FirstInitial" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="LastName" class="control-label"></label>
                <input asp-for="LastName" class="form-control" />
                <span asp-validation-for="LastName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Birthdate" class="control-label"></label>
                <input asp-for="Birthdate" class="form-control" />
                <span asp-validation-for="Birthdate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FacilityId" class="control-label"></label>
                <input asp-for="FacilityId" class="form-control" />
                <span asp-validation-for="FacilityId" class="text-danger"></span>
            </div>
            <div class="text-danger mt-2 mb-2">@TempData["ErrorMessage"] </div>
            <div class="form-group">
                <label asp-for="StatusTypeId" class="control-label"></label>
                <select asp-for="StatusTypeId" class="form-control" asp-items="ViewBag.StatusTypeId"></select>
                <span asp-validation-for="StatusTypeId" class="text-danger"></span>
            </div>
            @if (Model.StatusTypeId == 3 || Model.StatusTypeId == 5)
            {
            <div class="form-group">
                <label asp-for="Diagnosis" class="control-label"></label>
                <input asp-for="Diagnosis" class="form-control" />
                <span asp-validation-for="Diagnosis" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SessionsPerWeek" class="control-label"></label>
                <input asp-for="SessionsPerWeek" class="form-control" />
                <span asp-validation-for="SessionsPerWeek" class="text-danger"></span>
            </div>
            }
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>


<div>
    <a asp-controller="Clients"
       asp-action="Details"
       asp-route-id="@Model.ClientId">Back to details</a>
</div>
@*<div>
    <a asp-action="Index">Back to List</a>
</div>*@

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
