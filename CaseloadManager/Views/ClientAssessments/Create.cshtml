@model CaseloadManager.Models.ClientAssessment

@{
    ViewData["Title"] = "Create";
}

<h1>What test did you administer to this client?</h1>

<h4>Assign Assessment</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            @Html.Hidden("clientId")
            @*<div class="form-group">
                <label asp-for="Client" class="control-label"></label>
                <input asp-for="ClientId" class ="form-control" value="ViewBag.ClientId"></input>
            </div>*@
            <div class="form-group">
                <label asp-for="Assessment" class="control-label"></label>
                <select asp-for="AssessmentId" class ="form-control" asp-items="ViewBag.AssessmentId"></select>
            </div>
            <div class="form-group">
                <label asp-for="StandarizedScore" class="control-label"></label>
                <input asp-for="StandarizedScore" class="form-control" />
                <span asp-validation-for="StandarizedScore" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DateAdministered" class="control-label"></label>
                <input asp-for="DateAdministered" class="form-control" />
                <span asp-validation-for="DateAdministered" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    @Html.ActionLink("Back to Details", "Details", "Clients", new { clientAssessmentId = @Model.Client.ClientAssessmentId }, null)
    @*<a asp-action="Details">Back to List</a>*@
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
