@model CaseloadManager.Models.Goal

@{
    ViewData["Title"] = "Create";
}

<h3>Create a goal for this client</h3>

<hr />
<div class="create-goal_position">
    <div class="row">
        <div class="col-md-4">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                @Html.Hidden("clientId")
                @*<div class="form-group">
                        <label asp-for="ClientId" class="control-label"></label>
                        <select asp-for="ClientId" class="form-control" asp-items="ViewBag.ClientId"></select>
                    </div>*@
                <div class="form-group">
                    <label asp-for="Title" class="control-label"></label>
                    <input asp-for="Title" class="form-control" placeholder="Area Ex: Speech, Language">
                    <span asp-validation-for="Title" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Description" class="control-label"></label>
                    <input asp-for="Description" class="form-control" />
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Create" class="btn btn-outline-dark btn-sm" />
                </div>
            </form>
        </div>
    </div>
</div>

<div>
    <a class="btn btn-outline-dark btn-sm" asp-controller="Clients"
       asp-action="Details"
       asp-route-id="@ViewBag.ClientId">Back to details</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
