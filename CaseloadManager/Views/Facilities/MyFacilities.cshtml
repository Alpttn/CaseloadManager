@model IEnumerable<CaseloadManager.Models.FacilityViewModels.MyFacilitiesViewModel>

@{
    ViewData["Title"] = "MyFacilities";
}

<h1>My Facilities</h1>

<p>
    <a asp-action="Create">Add a Facility</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Adress)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FacilityType)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.User)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Adress)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FacilityType.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.User.Id)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.FacilityId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.FacilityId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.FacilityId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
